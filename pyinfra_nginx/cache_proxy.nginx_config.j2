server {
    server_name {{ domain }};
    client_max_body_size 512m;
    underscores_in_headers on;

    # wp-login does not work with redirect (cookie issue)
    location /wp-login.php {
        return 302 https://{{ cache_proxy }}/wp-login.php;
    }

    location / {
        proxy_pass https://{{ cache_proxy }};
        proxy_set_header    Accept-Encoding     "";

        proxy_cache pyinfra_zone;
        proxy_cache_valid 200 {{ cache_time }};
        proxy_cache_valid 404 {{ cache_time }};
        proxy_cache_use_stale error timeout invalid_header updating;
        add_header X-Cache-Status $upstream_cache_status;

        proxy_set_header    Host                {{ cache_proxy }};
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto   $scheme;
        {{ websocket_config }}

        sub_filter '{{ cache_proxy }}' '$host';

        sub_filter_once off;
        sub_filter_last_modified on;
	}

    listen [::]:443 ssl http2;
    listen 443 ssl http2;
    ssl_certificate /var/lib/acme/live/{{ domain }}/fullchain; # managed by acmetool
    ssl_certificate_key /var/lib/acme/live/{{ domain }}/privkey; # managed by acmetool
}